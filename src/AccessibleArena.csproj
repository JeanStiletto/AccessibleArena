<Project Sdk="Microsoft.NET.Sdk">

  <!-- Exclude archived code from compilation -->
  <ItemGroup>
    <Compile Remove="**/old/**/*.cs" />
  </ItemGroup>

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AssemblyName>AccessibleArena</AssemblyName>
    <RootNamespace>AccessibleArena</RootNamespace>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <!-- Generate VersionInfo.g.cs so MelonInfo can use a const from Directory.Build.props -->
  <Target Name="GenerateVersionInfo" BeforeTargets="CoreCompile">
    <ItemGroup>
      <_VersionLines Include="// Auto-generated from Directory.Build.props â€” do not edit" />
      <_VersionLines Include="internal static class VersionInfo { internal const string Value = &quot;$(ModVersion)&quot;%3B }" />
    </ItemGroup>
    <WriteLinesToFile File="$(IntermediateOutputPath)VersionInfo.g.cs" Lines="@(_VersionLines)" Overwrite="true" />
    <ItemGroup>
      <Compile Include="$(IntermediateOutputPath)VersionInfo.g.cs" />
    </ItemGroup>
  </Target>

  <ItemGroup>
    <Reference Include="0Harmony">
      <HintPath>..\libs\0Harmony.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="MelonLoader">
      <HintPath>..\libs\MelonLoader.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Assembly-CSharp">
      <HintPath>..\libs\Assembly-CSharp.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine">
      <HintPath>..\libs\UnityEngine.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>..\libs\UnityEngine.CoreModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.UI">
      <HintPath>..\libs\UnityEngine.UI.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.InputLegacyModule">
      <HintPath>..\libs\UnityEngine.InputLegacyModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.UIModule">
      <HintPath>..\libs\UnityEngine.UIModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Unity.TextMeshPro">
